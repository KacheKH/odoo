<openerp>
    <data>
        <!-- Vista tipo lista Horinzontal -->
        <record model="ir.ui.view" id="petro.list_clases">
            <field name="name">Listado</field>
            <field name="model">petro.clase</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="codclase"/>
                    <field name="name"/>
                    <field name="desclase"/>
                </tree>
            </field>
        </record>
        <!-- vistas de trs diferentes tipos Horinzontal,recuadro,hoja de datos -->
        <record model="ir.actions.act_window" id="petro.action_window_clases">
            <field name="name">Clases</field>
            <field name="res_model">petro.clase</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Zona designada para la busqueda personalizada -->
        <record id="petro.list_search_clases" model="ir.ui.view">
            <field name="name">Búsqueda de Clase</field>
            <field name="model">petro.clase</field>
            <field name="arch" type="xml">
                <search >
                    <field name="codclase"/>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!-- zona designada para el ingreso de datos -->
        <record model="ir.ui.view" id="petro.list_form_clases">
            <field name="name">Creación e edición</field>
            <field name="model">petro.clase</field>
            <field eval="1" name="priority" />
            <field name="arch" type="xml">
                <form string="Productos2">
                    <sheet>
                        <notebook>
                            <page string="Clases">
                                <group>
                                    <field name="codclase"/>
                                    <field name="name"/>
                                    <field name="desclase"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- menu categories -->
        <menuitem name="Clases" id="petro.clases" parent="petro.menu_root"/>
        <!-- actions -->
        <menuitem name="Listado" id="petro.clases_list" parent="petro.clases" action="petro.action_window_clases"/>
    </data>
</openerp>