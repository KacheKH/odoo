<openerp>
  <data>
    <!-- vista Tipo recuadro con imagenes-->
    <!-- zona seleccionas de kanban de datos -->
    <record id="petro.list_kanban" model="ir.ui.view">
      <field name="name">kanban</field>
      <field name="model">petro.producto</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="codbod"/>
          <field name="name"/>
          <field name="grupmat"/>
          <field name="umed"/>
          <field name="cantstock"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('petro.producto','img',record.id.value )" />
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <span t-if="record.id.value"></span>
                    <field name="name" />
                  </strong>
                  <div name="tags" />
                  <field name="codbod"/>
                  <div name="tags" />
                  <field name="grupmat"/>
                  <div name="tags" />
                  <field name="cantstock"/>
                  <ul>
                    <li>
                      <field name="umed"/>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <!-- Vista tipo lista Horinzontal -->
    <record model="ir.ui.view" id="petro.list_productos">
      <field name="name">Listado</field>
      <field name="model">petro.producto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="codbod"/>
          <field name="name"/>
          <field name="grupmat"/>
          <field name="umed"/>
          <field name="cantstock"/>
          <field name="codart"/>
          <field name="cnew"/>
        </tree>
      </field>
    </record>
    <!-- vistas de trs diferentes tipos Horinzontal,recuadro,hoja de datos -->
    <record model="ir.actions.act_window" id="petro.action_window_productos">
      <field name="name">Inventario Productos</field>
      <field name="res_model">petro.producto</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Zona designada para la busqueda personalizada -->
    <record id="petro.list_search" model="ir.ui.view">
      <field name="name">Búsqueda de Inventario</field>
      <field name="model">petro.producto</field>
      <field name="arch" type="xml">
        <search >
          <field name="codbod"/>
          <field name="name"/>
          <field name="grupmat"/>
          <field name="cantstock"/>
          <field name="codart"/>
          <field name="cnew"/>
        </search>
      </field>
    </record>
    <!-- zona designada para el ingreso de datos -->
    <record model="ir.ui.view" id="petro.list_form_productos">
      <field name="name">Creación e edición</field>
      <field name="model">petro.producto</field>
      <field eval="1" name="priority" />
      <field name="arch" type="xml">
        <form string="Productos2">
          <sheet>
            <notebook>
              <page string="Productos">
                <group>
                  <field name="img" widget="image" string="Imagen del Producto" class="oe-avatar" />
                  <field name="codbod"/>
                  <field name="name"/>
                  <field name="desp"/>
                  <field name="descinv"/>
                  <field name="ding"/>
                  <field name="grupmat"/>
                  <field name="umed"/>
                  <field name="cantstock"/>
                  <field name="codart"/>
                  <field name="cnew"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <!-- Top menu item -->
    <menuitem name="PetroEcuador" id="petro.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Productos" id="petro.productos" parent="petro.menu_root"/>
    <!-- actions -->
    <menuitem name="Listado" id="petro.productos_list" parent="petro.productos" action="petro.action_window_productos"/>
  </data>
</openerp>